# ================================================================
# BeautyAI Clean Nginx Configuration with WebSocket Support
# ================================================================

# HTTP Redirects (port 80) - redirect to HTTPS
server {
    listen 80;
    server_name dev.gmai.sa api.gmai.sa;
    return 301 https://$server_name$request_uri;
}

# ================================================================
# WEB UI SERVER: https://dev.gmai.sa (Frontend Application)
# ================================================================
server {
    listen 443 ssl;
    server_name dev.gmai.sa;

    # SSL certificate configuration
    ssl_certificate /etc/letsencrypt/live/dev.gmai.sa/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/dev.gmai.sa/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # ================================================================
    # WEBSOCKET ENDPOINTS for dev.gmai.sa (Frontend WebSocket requests)
    # ================================================================
    location /api/v1/ws/simple-voice-chat {
        proxy_pass http://localhost:8000/api/v1/ws/simple-voice-chat;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket specific settings - CRITICAL
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
        proxy_connect_timeout 86400s;
        proxy_buffering off;
        proxy_cache off;
    }

    location /api/v1/ws/streaming-voice {
        proxy_pass http://localhost:8000/api/v1/ws/streaming-voice;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket specific settings
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
        proxy_connect_timeout 86400s;
        proxy_buffering off;
        proxy_cache off;
    }

    # ================================================================
    # DEBUG LOCATION
    location /api/debug {
        return 200 "nginx api proxy working - $request_uri\n";
        add_header Content-Type text/plain;
    }

    # API ENDPOINTS for dev.gmai.sa (Backend API requests)
    # ================================================================
    location /api/ {
        proxy_pass http://localhost:8000/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # API specific settings
        client_max_body_size 100M;
        proxy_read_timeout 600s;
        proxy_send_timeout 600s;
    }

    # ================================================================
    # FRONTEND APPLICATION (default location)
    # ================================================================
    location / {
        proxy_pass http://localhost:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Standard proxy settings for frontend
        proxy_http_version 1.1;
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
    }
}

# ================================================================
# API SERVER: https://api.gmai.sa (BeautyAI API & WebSocket)
# ================================================================
server {
    listen 443 ssl default_server;
    server_name api.gmai.sa;

    # SSL certificate configuration
    ssl_certificate /etc/letsencrypt/live/api.gmai.sa/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.gmai.sa/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # CORS headers (only once!)
    add_header Access-Control-Allow-Origin "https://dev.gmai.sa" always;
    add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
    add_header Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With" always;
    add_header Access-Control-Allow-Credentials true always;

    # Handle preflight OPTIONS requests
    if ($request_method = 'OPTIONS') {
        return 204;
    }

    # ================================================================
    # WEBSOCKET ENDPOINTS: wss://api.gmai.sa/api/v1/ws/
    # ================================================================
    # Explicit high-priority block for the new streaming voice endpoint to avoid
    # any unintended interaction with other generic /api/v1/ws/ locations or future rewrites.
    # This also allows tightening / extending timeouts independently if needed.
    location /api/v1/ws/streaming-voice {
        proxy_pass http://localhost:8000/api/v1/ws/streaming-voice;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
        proxy_buffering off;
        # Larger frames & disable buffering for low-latency streaming
    }

    location /api/v1/ws/ {
        proxy_pass http://localhost:8000/api/v1/ws/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket specific settings
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
        proxy_buffering off;
    }

    # ================================================================
    # LEGACY WEBSOCKET ENDPOINTS: wss://api.gmai.sa/ws/ (for backward compatibility)
    # ================================================================
    location /ws/ {
        proxy_pass http://localhost:8000/ws/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket specific settings
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
        proxy_buffering off;
    }

    # ================================================================
    # ALL OTHER API ENDPOINTS
    # ================================================================
    location / {
        proxy_pass http://localhost:8000/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # API specific settings
        client_max_body_size 100M;
        proxy_read_timeout 600s;
        proxy_send_timeout 600s;
    }
}
