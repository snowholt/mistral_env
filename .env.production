# Production environment configuration for BeautyAI
# This file should be loaded by both frontend and backend services

# Environment detection - set to production for deployment
BEAUTYAI_ENV=production
PRODUCTION=true
DEBUG=false

# Backend WebSocket configuration for production
# Use domain name for WebSocket connections through nginx proxy
BACKEND_WS_HOST=dev.gmai.sa
BACKEND_WS_PROTOCOL=wss

# Backend API configuration - still localhost for backend-to-backend communication
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_PROTOCOL=http

# Frontend configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000

# Security settings for production
SESSION_COOKIE_SECURE=true
SECRET_KEY=beautyai-production-secret-key-change-this-in-real-deployment

# Connection settings optimized for production
CONNECTION_TIMEOUT_MS=10000
RECONNECT_ATTEMPTS=5
RECONNECT_DELAY_MS=2000

# API timeout settings
API_TIMEOUT=60

# Logging configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_INTERFACE=true

# Feature flags
ENABLE_METRICS=true
ENABLE_DEVICE_SELECTION=true
ENABLE_ECHO_TEST=true

# Voice settings
DEFAULT_LANGUAGE=en
DEFAULT_VOICE_TYPE=female

# Audio configuration
DEFAULT_SAMPLE_RATE=16000
DEFAULT_CHUNK_SIZE=320

# TTS configuration
TTS_ENGINE=edge
EDGE_TTS_VOICE_EN_MALE=en-US-ChristopherNeural
EDGE_TTS_VOICE_EN_FEMALE=en-US-JennyNeural
EDGE_TTS_VOICE_AR_MALE=ar-SA-HamedNeural
EDGE_TTS_VOICE_AR_FEMALE=ar-SA-ZariyahNeural

# Performance settings
MAX_WORKERS=4
BUFFER_SIZE=65536
ENABLE_COMPRESSION=true

# CORS settings for production
CORS_ORIGINS=https://dev.gmai.sa,https://localhost:5001

# Duplex streaming settings
DUPLEX_ENABLED=true
ECHO_CANCELLATION=true
BARGE_IN_ENABLED=true

# Voice streaming phase 4 enabled
VOICE_STREAMING_ENABLED=1
VOICE_STREAMING_PHASE4=1